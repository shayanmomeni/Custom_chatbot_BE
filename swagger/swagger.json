{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Decent Chatbot API",
        "description": "API documentation for Decent Chatbot"
    },
    "host": "localhost:8888",
    "basePath": "/",
    "schemes": ["http"],
    "paths": {
        "/": {
            "get": {
                "summary": "Home Route",
                "description": "Returns a message indicating the server is running",
                "responses": {
                    "200": {
                        "description": "Server is running"
                    }
                }
            }
        },
        "/login": {
            "post": {
                "summary": "Login",
                "description": "Logs in a user",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "User credentials",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "username": { "type": "string" },
                                "password": { "type": "string" }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": { "description": "Login successful" },
                    "401": { "description": "Login failed" }
                }
            }
        },
        "/register": {
            "post": {
                "summary": "Register",
                "description": "Registers a new user",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "User details",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "username": { "type": "string" },
                                "password": { "type": "string" },
                                "fullName": { "type": "string" }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": { "description": "Registration successful" },
                    "400": { "description": "Registration failed" }
                }
            }
        },
        "/user/{userId}": {
            "delete": {
                "summary": "Remove User",
                "description": "Removes a user by ID",
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "required": true,
                        "type": "string",
                        "description": "ID of the user to remove"
                    }
                ],
                "responses": {
                    "200": { "description": "User removed successfully" },
                    "404": { "description": "User not found" },
                    "500": { "description": "Database error" }
                }
            }
        },
        "/send-message": {
            "post": {
                "summary": "Send Message",
                "description": "Sends a user message and receives a mock response",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Message details",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "userId": { "type": "string" },
                                "message": { "type": "string" },
                                "currentStep": { "type": "string" },
                                "history": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "role": { "type": "string" },
                                            "content": { "type": "string" },
                                            "step": { "type": "string" }
                                        }
                                    }
                                },
                                "conversationId": { "type": "string" }
                            },
                            "required": ["userId", "message", "currentStep", "conversationId"]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Message processed successfully",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": { "type": "string" },
                                "data": {
                                    "type": "object",
                                    "properties": {
                                        "openAIResponse": { "type": "string" },
                                        "nextStep": { "type": "string" },
                                        "isEnd": { "type": "boolean" }
                                    }
                                }
                            }
                        }
                    },
                    "400": { "description": "Bad request - Missing fields" },
                    "500": { "description": "Internal server error" }
                }
            }
        },
        "/assessment": {
            "put": {
                "summary": "Save Assessment",
                "description": "Saves the user's assessment answers",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Assessment data",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "userId": { "type": "string" },
                                "answers": {
                                    "type": "array",
                                    "items": { "type": "string" }
                                }
                            },
                            "required": ["userId", "answers"]
                        }
                    }
                ],
                "responses": {
                    "200": { "description": "Assessment saved successfully" },
                    "400": { "description": "Invalid request data" },
                    "500": { "description": "Internal server error" }
                }
            },
            "get": {
                "summary": "Get Assessment",
                "description": "Retrieves the user's assessment answers",
                "parameters": [
                    {
                        "in": "query",
                        "name": "userId",
                        "required": true,
                        "type": "string",
                        "description": "User ID to retrieve the assessment answers for"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Assessment retrieved successfully",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": { "type": "string" },
                                "data": {
                                    "type": "array",
                                    "items": { "type": "string" }
                                }
                            }
                        }
                    },
                    "400": { "description": "Invalid request data" },
                    "404": { "description": "User not found" }
                }
            }
        },
        "/conversation": {
            "get": {
                "summary": "Retrieve user conversation",
                "description": "Fetches grouped conversations by userId and optionally conversationId",
                "parameters": [
                    {
                        "in": "query",
                        "name": "userId",
                        "required": true,
                        "type": "string",
                        "description": "User ID"
                    },
                    {
                        "in": "query",
                        "name": "conversationId",
                        "required": false,
                        "type": "string",
                        "description": "Optional conversation ID"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Conversations retrieved successfully",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": { "type": "string" },
                                "data": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "conversationId": { "type": "string" },
                                            "userId": { "type": "string" },
                                            "responses": {
                                                "type": "array",
                                                "items": {
                                                    "type": "object",
                                                    "properties": {
                                                        "questionKey": { "type": "string" },
                                                        "response": { "type": "string" },
                                                        "timestamp": { "type": "string" }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": { "description": "Invalid user ID or conversation ID" },
                    "404": { "description": "No conversation found" },
                    "500": { "description": "Server error" }
                }
            }
        },
        "/userresponses": {
            "get": {
                "summary": "Retrieve user responses",
                "description": "Fetches individual responses for a given userId and optionally conversationId",
                "parameters": [
                    {
                        "in": "query",
                        "name": "userId",
                        "required": true,
                        "type": "string",
                        "description": "User ID"
                    },
                    {
                        "in": "query",
                        "name": "conversationId",
                        "required": false,
                        "type": "string",
                        "description": "Optional conversation ID"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Responses retrieved successfully",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": { "type": "string" },
                                "data": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "questionKey": { "type": "string" },
                                            "response": { "type": "string" },
                                            "timestamp": { "type": "string" }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": { "description": "Invalid user ID" },
                    "404": { "description": "No responses found" },
                    "500": { "description": "Server error" }
                }
            }
        }
    }
}
